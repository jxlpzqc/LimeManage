@model LimeManage.ViewModels.EditProjectViewModel

@{
    ViewBag.Title = "更改项目";
    var F = Html.F();
}



@section body{
    @(F.Form()
                .ID("mainForm")
                .LabelAlign(LabelAlign.Right)
                .MessageTarget(MessageTarget.Side)
                .BodyPadding(5)
                .Width(800)
                .Title("新建项目")
                .AutoScroll(true)
                .Items(
                    F.GroupPanel()
                        .ID("GroupPanel1")
                        .Layout(LayoutType.Anchor)
                        .Title("项目基本信息")
                        .Items(
                            F.Panel()
                                .ID("Panel2")
                                .Layout(LayoutType.HBox)
                                .ShowHeader(false)
                                .ShowBorder(false)
                                .Items(

                                    F.TextBox()
                                        .ID("projectID")
                                        .Label("项目编号")
                                        .CssClass("marginr")
                                        .Required(true)
                                        .ShowRedStar(true)
                                        .BoxFlex(2)
                                        .Text(Model.ID)
                                        .Enabled(false)
                                        ,

                                    F.TextBox()
                                        .ID("ProjectName")
                                        .Label("项目名称")
                                        .Required(true)
                                        .ShowRedStar(true)
                                        .BoxFlex(3)
                                        .Text(Model.Name)
                                ),
                            F.Panel()
                                .ID("Panel1")
                                .Layout(LayoutType.HBox)
                                .BoxConfigAlign(BoxLayoutAlign.Stretch)
                                .ShowHeader(false)
                                .ShowBorder(false)
                                .Items(
                                   F.DropDownList()
                                   .ID("ddlProvince")
                                   .Label("省")
                                   .Required(true)
                                   .ShowRedStar(true)
                                    .CompareType(CompareType.String)
                                    .CompareValue("-1")
                                    .CompareOperator(Operator.NotEqual)
                                    .CompareMessage("请选择省份！")
                                   .BoxFlex(1)
                                   .DataValueField("ID")
                                   .DataTextField("Name")
                                   .SelectedValue(Model.Province)
                                   .DataSource(Model.ProvinceTable)
                                   .OnSelectedIndexChanged(Url.Action("ProvinceChange"), "mainForm"),
                                   F.DropDownList()
                                   .ID("ddlCity")
                                   .Label("市")
                                   .Required(true)
                                   .LabelWidth(50)
                                    .DataValueField("ID")
                                    .DataTextField("Name")
                                   .ShowRedStar(true)
                                   .BoxFlex(1)
                                   .CompareType(CompareType.String)
                                    .CompareValue("-1")
                                    .CompareOperator(Operator.NotEqual)
                                    .CompareMessage("请选择地区市！")
                                    .OnSelectedIndexChanged(Url.Action("CityChange"), "mainForm")
                                    .SelectedValue(Model.City)
                                    .DataSource(Model.CityTable),
                                   F.DropDownList()
                                   .ID("ddlCounty")
                                   .Label("县/区")
                                    .DataValueField("ID")
                                    .DataTextField("Name")
                                   .Required(true)
                                   .LabelWidth(70)
                                   .ShowRedStar(true)
                                   .BoxFlex(1)
                                   .CompareType(CompareType.String)
                                    .CompareValue("-1")
                                    .CompareOperator(Operator.NotEqual)
                                    .CompareMessage("请选择县！")
                                    .SelectedValue(Model.County)
                                    .DataSource(Model.CountyTable)
                                )
                        ),
                    F.GroupPanel()
                        .ID("GroupPanel2")
                        .Layout(LayoutType.Anchor)
                        .Title("协议信息")
                        .Items(
                            F.Panel()
                            .Layout(LayoutType.HBox)
                            .BoxConfigAlign(BoxLayoutAlign.Stretch)
                            .ShowHeader(false)
                            .ShowBorder(false)
                            .Items(
                                F.TextBox()
                                    .ID("tbPartyA")
                                    .Label("甲方名称")
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .Text(Model.PartyA)
                                    .BoxFlex(1),
                                F.DropDownList()
                                    .ID("ddlPartyB")
                                    .Label("乙方")
                                    .LabelWidth(70)
                                    .EnableEdit(true)
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .BoxFlex(1)
                                    .DataTextField("Name")
                                    .DataValueField("ID")
                                    .SelectedValue(Model.partyB)
                                    .DataSource(Model.PartyBTable)
                                    .EmptyText("输入或选择乙方")
                            ),
                            F.Panel()
                            .Layout(LayoutType.HBox)
                            .BoxConfigAlign(BoxLayoutAlign.Stretch)
                            .ShowHeader(false)
                            .ShowBorder(false)
                            .Items(
                                F.TextBox()
                                    .ID("tbResponsiblePerson")
                                    .Label("负责人")
                                    .Text(Model.ResponsiblePerson)
                                    .BoxFlex(1),
                                F.TextBox()
                                    .ID("tbContact")
                                    .Label("联系电话")
                                    .Text(Model.ContactPhone)
                                    .LabelWidth(90)
                                    .BoxFlex(2)
                            ),
                            F.Panel()
                            .Layout(LayoutType.HBox)
                            .BoxConfigAlign(BoxLayoutAlign.Stretch)
                            .ShowHeader(false)
                            .ShowBorder(false)
                            .Items(
                                F.NumberBox()
                                    .ID("nbMoney")
                                    .Label("金额")
                                    .ShowRedStar(true)
                                    .NoDecimal(true)
                                    .NoNegative(true)
                                    .Text(Model.Money)
                                    .Required(true)
                                    .BoxFlex(1),
                                F.DropDownList()
                                    .ID("ddlMoneyUnit")

                                    .Width(60)
                                    .Items(
                                        F.ListItem()
                                        .Text("元")
                                        .Value("yuan")
                                        .Selected(true),
                                        F.ListItem()
                                        .Text("万元")
                                        .Value("wan")
                                        ,
                                        F.ListItem()
                                        .Text("亿元")
                                        .Value("yi")
                                    ),
                                F.DatePicker()
                                    .ID("dpDate")
                                    .Label("日期")
                                    .ShowRedStar(true)
                                    .LabelWidth(90)
                                    .BoxFlex(1)
                                    .SelectedDate(Model.Date)
                                    )


                        ),
                        F.Panel()
                        .ShowBorder(false)
                        .ShowHeader(false)
                        .Layout(LayoutType.HBox)
                        .Items(
                            F.Button()
                            .ValidateForms("mainForm")
                            .Text("提交")
                            .OnClick(Url.Action("doEditProject"), "mainForm")
                            .BoxFlex(1),
                            F.Button()
                            .Type(ButtonType.Reset)
                            .CssStyle("background-color:green;color:white;")
                            .Text("重置")
                            .BoxFlex(1)

                        )
                )

    )
}
