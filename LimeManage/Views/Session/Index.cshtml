
@{
    ViewBag.Title = "请登录";
    var F = @Html.F();
}


@section body{
    <h1 style="text-align:center;font-size:1.5em">欢迎使用Lime项目管理系统</h1>
    <h1 style="text-align:center;font-size:3em">请登录</h1>
    @(F.Window()
        .Width(350)
        .WindowPosition(WindowPosition.GoldenSection)
        .EnableClose(false)
        .IsModal(false)
        .Title("登录")
        .ID("Window1")
        .Items(
            F.SimpleForm()
                .ShowHeader(false)
                .LabelWidth(80)
                .BodyPadding(10)
                .ShowBorder(false)
                .ID("SimpleForm1")
                .Items(
                    F.TextBox()
                        .ShowRedStar(true)
                        .Required(true)
                        .Label("用户名")
                        .ID("UserName")
                        .Text("admin") //TODO 删了
                        ,
                    F.TextBox()
                        .ShowRedStar(true)
                        .Required(true)
                        .TextMode(TextMode.Password)
                        .Label("密码")
                        .Text("admin") //TODO 删了
                        .ID("Password")
                )
        )
        .Toolbars(
            F.Toolbar()
                .Position(ToolbarPosition.Bottom)
                .ToolbarAlign(ToolbarAlign.Right)
                .ID("Toolbar1")
                .Items(
                    F.Button()
                        .OnClick(Url.Action("Login"), "SimpleForm1")
                        .ValidateTarget(Target.Top)
                        .ValidateForms("SimpleForm1")
                        .Type(ButtonType.Submit)
                        .Text("登录")
                        .ID("btnLogin"),
                    F.Button()
                        .Type(ButtonType.Reset)
                        .Text("重置")
                        .ID("btnReset")
                )
        )
)
}
